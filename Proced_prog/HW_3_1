#define _USE_MATH_DEFINES

#include <iostream>
#include <math.h>

using namespace std;


int main()
{
    setlocale(LC_ALL, "Russian");
    double s,p,n,r;

    cout << "Введите s" << endl;
    cin >> s;
    cout << "Введите n" << endl;
    cin >> n;
    cout << "Введите p" << endl;
    cin >> p;
    
    if (p == 0 || n == 0)
    {
        cout << "Ошибка" << endl;
    }
    else
    {
        r = p / 100;
        cout << (s * r * pow(1 + r, n)) / (12 * (pow(1 + r, n) - 1));
    }
    
	return 0;
}

