#define _USE_MATH_DEFINES

#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    double h, r1, r2, v, s, l;

    cout << "Введите h" << endl;
    cin >> h;
    cout << "Введите R" << endl;
    cin >> r1;
    cout << "Введите r" << endl;
    cin >> r2;
    
    l = sqrt(h * h + (r1 - r2) * (r1 - r2));
    v = 1 / 3 * h * M_PI * (r1 * r1 + r1 * r2 + r2 * r2);
    s = M_PI * (r1 * r1 + (r1 + r2) * l + r2 * r2);

    cout << "Объем конуса равен ";
    cout << v << endl;
    cout << "Полная площадь поверхности конуса равна ";
    cout << s << endl;


    return 0;
}
