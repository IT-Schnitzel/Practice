#include <iostream>

using namespace std;

int main(void)
{
    int stars_in_a_row = 8;
    int flag_width = 55;
    int c;
    for (int i = 0; i < 6; i++)
    {
        int c = i%2;
        for (int j = 0; j < stars_in_a_row; j++)
        {
            cout << "* ";
        }
        if (c == 0)
        {
            for (int k = 0; k < flag_width - stars_in_a_row*2; k++)
            {
                cout << '$';
            }
        }
        else
        {
            for (int k = 0; k < flag_width - stars_in_a_row*2; k++)
            {
                cout << ' ';
            }
        }
        cout << endl;
    }
    for (int i = 0; i < 7; i++)
    {
        int c = i%2;
        if (c == 0)
        {
            for (int k = 0; k < flag_width; k++)
            {
                cout << '$';
            }
        }
        else
        {
            for (int k = 0; k < flag_width; k++)
            {
                cout << ' ';
            }
        }
        cout << endl;
    }
    return 0;
}
