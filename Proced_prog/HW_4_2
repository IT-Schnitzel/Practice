#define _USE_MATH_DEFINES

#include <iostream>
#include <fstream>
#include <string>
// #include <math.h>

int sign(double i)
{
	if (i > 0)
	{
		return 1;
	}
	if (i == 0)
	{
		return 0;
	}
	return -1;
}
using namespace std;

int main()
{

	setlocale(LC_ALL, "Russian");
	double a;
	cout << "Введите число" << endl;
	cin >> a;
	cout << sign(a);
}
